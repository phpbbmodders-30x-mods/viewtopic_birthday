<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.0.1.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
		<title lang="en">Viewprofile Birthday</title>
		<description lang="en">An addon for viewtopic birthday that displays the birthday cake on the viewprofile page.</description>
		<author-notes lang="en">This MOD requires viewtopic_birthday. It was requested by jalaln. </author-notes>
		<author-group>
			<author>
				<realname>Igor Wiedler</realname>
				<email>evil@phpbbmodders.net</email>
				<username>evil3</username>
				<homepage>http://phpbbmodders.net</homepage>
			</author>
		</author-group>
		<mod-version>
			<major>1</major>
			<minor>0</minor>
			<revision>0</revision>
		</mod-version>
		<installation>
			<level>easy</level>
			<time>60</time>
			<target-version>
				<target-primary>3.0.0</target-primary>
				<target-major allow="exact">3</target-major>
				<target-minor allow="exact">0</target-minor>
				<target-revision allow="after-equal">0</target-revision>
			</target-version>
		</installation>
		<history>
			<entry>
				<date>2008-03-23</date>
				<rev-version>
					<major>1</major>
					<minor>0</minor>
					<revision>0</revision>
				</rev-version>
				<changelog lang="en">
					<change>Initial release</change>
				</changelog>
			</entry>
		</history>
	</header>
	<action-group>
		<open src="memberlist.php">
			<edit>
				<find>			$age = (int) ($now['year'] - $bday_year - $diff);
		}
	}</find>
				<action type="after-add"><![CDATA[	// viewprofile birthday
	$viewprofile_birthday = false;
	if ($config['allow_birthdays'] && $data['user_birthday'])
	{
		list($bday_day, $bday_month) = array_map('intval', explode('-', $data['user_birthday']));

		if (!isset($now))
		{
            $now = getdate(time() + $user->timezone + $user->dst - date('Z'));
		}

		if ($bday_day === (int) $now['mday'] && $bday_month === (int) $now['mon'])
		{
			$viewprofile_birthday = true;
		}
	}]]></action>
			</edit>
			<edit>
				<find>		'AGE'			=&gt; $age,</find>
				<action type="after-add">		// viewprofile birthday
		'BIRTHDAY_IMG'	=&gt; $viewprofile_birthday ? $user-&gt;img('icon_birthday', 'VIEWTOPIC_BIRTHDAY') : false,</action>
			</edit>
		</open>
		<open src="styles/prosilver/template/memberlist_view.html">
			<edit>
				<find><![CDATA[			<!-- IF RANK_IMG --><dd style="text-align: center;">{RANK_IMG}</dd><!-- ENDIF -->]]></find>
				<action type="after-add"><![CDATA[			<!-- IF BIRTHDAY_IMG --><dd style="text-align: center;">{BIRTHDAY_IMG}</dd><!-- ENDIF -->]]></action>
			</edit>
			<edit>
				<find><![CDATA[			<!-- IF RANK_IMG --><dt><!-- IF RANK_TITLE -->&nbsp;<!-- ELSE -->{L_RANK}:<!-- ENDIF --></dt> <dd>{RANK_IMG}</dd><!-- ENDIF -->]]></find>
				<action type="after-add"><![CDATA[			<!-- IF BIRTHDAY_IMG --><dt>{L_VIEWTOPIC_BIRTHDAY}:</dt> <dd>{BIRTHDAY_IMG}</dd><!-- ENDIF -->]]></action>
			</edit>
		</open>
	</action-group>
</mod>